pipeline {
  agent {
      label 'worker2'
      }
  tools { 
     maven 'Maven-3.9.7'
   }

    stages {
        stage('Checkout GIT') {
            steps {
                git branch: 'main', url: 'https://github.com/ostwalanandjain/samplecode.git'
            }
        }
       stage('Buid and Test') {
          steps{
              sh 'mvn install'
          }
       post {
          success {
            junit 'target/surefire-reports/**/*.xml'
          }
        }
       }
    }
}
